PORT=8787
BASE_URL=http://localhost:8787

# Render Postgres connection string (use INTERNAL URL on Render)
DATABASE_URL=

# For local Postgres you may want: PGSSLMODE=disable
# For Render external connections, SSL is typically required.
PGSSLMODE=require

# Create in Google Cloud Console (OAuth client: Web application)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Comma-separated list of allowed origins for CORS (dev-friendly).
# For Chrome extensions, allow your extension origin: chrome-extension://<id>
# You can also set to * for development.
ALLOWED_ORIGINS=*

# Run the scheduler loop in this process.
# - On Render Web Service: set RUN_SCHEDULER=false (use a Background Worker instead).
# - On Render Background Worker: leave unset or true.
RUN_SCHEDULER=true

# Where to persist store data (optional)
STORE_PATH=./data/store.json

